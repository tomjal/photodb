<div class="container app">
    <div class="masthead">
        <h3 class="muted">{{i18n "application.name"}}</h3>
    </div>
    <hr>
    <div class="row-fluid">
        <div class="ux-contentarea span12">
            {{#if error}}
            <div class="alert">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>{{i18n "bad.user.password"}}</strong> {{i18n "please.try.again"}}
            </div>
            {{/if}}
            <form class="form-signin">
                <h2 class="form-signin-heading">{{i18n "please.sign.in"}}</h2>
                <input type="text" class="input-block-level ux-username" placeholder='{{i18n "email.address"}}'>
                <input type="password" class="input-block-level ux-password" placeholder='{{i18n "password"}}'>
                <a class="btn btn-large btn-primary ux-login">{{i18n "sign.in"}}</a>
                <a class="btn btn-large btn-danger ux-create-user">{{i18n "new.user"}}</a>
            </form>
        </div>
    </div>
    <hr>
    <div class="footer">
        <p class="pull-left">Apache TomEE <a href="http://tomee.apache.org/">http://tomee.apache.org/</a></p>
    </div>
</div>