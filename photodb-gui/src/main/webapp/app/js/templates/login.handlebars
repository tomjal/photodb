<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">{{i18n "sign.in"}}</h4>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label for="{{accountTxtId}}" class="col-lg-3 control-label">{{i18n "user.account"}}</label>
                    <div class="col-lg-9">
                        <input type="email" class="form-control ux-username" id="{{accountTxtId}}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="{{passwordTxtId}}" class="col-lg-3 control-label">{{i18n "password"}}</label>
                    <div class="col-lg-9">
                        <input type="password" class="form-control ux-password" id="{{passwordTxtId}}">
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary ux-login" data-dismiss="modal">{{i18n "sign.in"}}</button>
            <button type="button" class="btn btn-default ux-create-user" data-dismiss="modal">{{i18n "new.user"}} </button>
        </div>
    </div>
</div>