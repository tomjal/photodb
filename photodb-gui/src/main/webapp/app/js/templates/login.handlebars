<div class="container app">
    <div class="masthead">
        <h3 class="muted">{{i18n "application.name"}}</h3>
    </div>
    <hr>
    <div class="row-fluid">
        <div class="ux-contentarea span12">
            {{#if error}}
            <div class="alert">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Bad user/password.</strong> Please, try again.
            </div>
            {{/if}}
            <form method="POST" action="j_security_check" class="form-signin">
                <h2 class="form-signin-heading">Please sign in</h2>
                <input name="j_username" type="text" class="input-block-level" placeholder="Email address">
                <input name="j_password" type="password" class="input-block-level" placeholder="Password">
                <button class="btn btn-large btn-primary" type="submit">Sign in</button>
            </form>
        </div>
    </div>
    <hr>
    <div class="footer">
        <p class="pull-left">Apache TomEE <a href="http://tomee.apache.org/">http://tomee.apache.org/</a></p>
    </div>
</div>