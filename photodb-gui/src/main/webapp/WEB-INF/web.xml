<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0" metadata-complete="false">

    <display-name>photodb</display-name>
    <listener>
        <listener-class>
            org.apache.commons.fileupload.servlet.FileCleanerCleanup
        </listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- .. -->
    <servlet>
        <servlet-name>cmd</servlet-name>
        <servlet-class>photodb.web.command.CommandServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cmd</servlet-name>
        <url-pattern>/cmd</url-pattern>
    </servlet-mapping>

    <!-- ... -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Rest services</web-resource-name>
            <url-pattern>/rest/*</url-pattern>
        </web-resource-collection>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Secure Content</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>photo-admin</role-name>
            <role-name>photo-user</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <!-- ... -->
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <!-- ... -->
    <security-role>
        <role-name>photo-admin</role-name>
    </security-role>
    <security-role>
        <role-name>photo-user</role-name>
    </security-role>
</web-app>